# Daily AI News Environment Configuration
# Copy this file to .env and fill in your actual values

# =====================================
# Basic Settings
# =====================================
HOURS_LOOKBACK=24
MAX_ITEMS_PER_CATEGORY=10
MAX_DAILY_ARTICLES=50
ARTICLE_RETENTION_DAYS=30

# Language Settings
TRANSLATE_TO_JA=false
TRANSLATE_ENGINE=deepl

# =====================================
# API Keys (Replace with your actual keys)
# =====================================

# IMPORTANT: Replace with your actual API key or remove if not using
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GITHUB_TOKEN=your_github_token_here
DEEPL_API_KEY=your_deepl_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# =====================================
# Feed Sources Configuration
# =====================================

# ArXiv API settings
ARXIV_MAX_RESULTS=50
ARXIV_CATEGORIES=cs.AI,cs.LG,cs.CL,cs.CV,cs.NE

# Reddit API
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=DailyAINews/1.0

# HackerNews API
HACKERNEWS_MIN_SCORE=100
HACKERNEWS_STORY_COUNT=30

# Custom RSS Feeds (comma-separated)
RSS_FEEDS=https://openai.com/blog/rss.xml,https://deepmind.com/blog/feed.xml,https://ai.googleblog.com/feeds/posts/default

# =====================================
# AI/ML Models
# =====================================
GEMINI_MODEL=gemini-2.5-flash-002
GEMINI_URL_CONTEXT_BATCH=20
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L12-v2
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-12-v2
NER_MODEL=dbmdz/bert-large-cased-finetuned-conll03-english
LLM_TEMPERATURE=0.3
MAX_CONTEXT_LENGTH=4096

# =====================================
# Database Configuration
# =====================================
DATABASE_URL=postgresql://localhost/daily_ai_news
SQLITE_PATH=./data/ai_news.db
REDIS_URL=redis://localhost:6379/0
QDRANT_URL=localhost:6333
VECTOR_DB_TYPE=chroma
VECTOR_DB_PATH=./data/vector_db

# =====================================
# Performance Settings
# =====================================
CACHE_TTL_SECONDS=3600
VECTOR_INDEX_SIZE=100000
BATCH_PROCESSING_SIZE=50
PARALLEL_WORKERS=8
MAX_WORKERS=4
REQUEST_TIMEOUT=30
RATE_LIMIT_RPM=60

# =====================================
# Search Configuration
# =====================================
SEARCH_HYBRID_WEIGHT=0.7
SEARCH_TOP_K=100
RERANK_TOP_K=20

# =====================================
# Evaluation Settings
# =====================================

# Multi-layer evaluation weights
QUALITY_WEIGHT=0.25
RELEVANCE_WEIGHT=0.25
TEMPORAL_WEIGHT=0.15
TRUST_WEIGHT=0.20
ACTIONABILITY_WEIGHT=0.15

# Time Value Settings
HALF_LIFE_HOURS=72
EVERGREEN_BOOST_FACTOR=1.5
TREND_WINDOW_DAYS=7

# Quality Thresholds
MIN_CONTENT_LENGTH=500
MAX_SUMMARY_LENGTH=300
FAITHFULNESS_THRESHOLD=0.8
BIAS_DETECTION_SENSITIVITY=0.7
RECOMMENDATION_THRESHOLD=0.75
NOISE_FILTER_THRESHOLD=0.3

# Persona-specific thresholds
ENGINEER_MIN_SCORE=0.7
BUSINESS_MIN_SCORE=0.65

# ROI calculation parameters
DEFAULT_DISCOUNT_RATE=0.10
MONTE_CARLO_SIMULATIONS=1000

# =====================================
# Output Settings
# =====================================
OUTPUT_DIR=./docs
BASE_URL=https://your-username.github.io/new-ai-news-site
SITE_TITLE=Daily AI News
SITE_DESCRIPTION=Curated AI news for technical and business professionals
TEMPLATE_DIR=templates
STATIC_DIR=static

# UI Theme (professional, dark, modern, minimal)
UI_THEME=professional

# Persona default (engineer, business)
DEFAULT_PERSONA=engineer

# =====================================
# Scheduling and Automation
# =====================================

# Cron schedule for feed collection (crontab format)
# Default: Every day at 6 AM
COLLECTION_SCHEDULE=0 6 * * *

# =====================================
# Logging and Monitoring
# =====================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_FILE=./logs/ai_news.log

# Sentry error tracking (optional)
SENTRY_DSN=

# =====================================
# Development Settings
# =====================================

# Debug mode (true/false)
DEBUG=false

# Test mode - uses mock data
TEST_MODE=false

# Development server
DEV_SERVER_HOST=0.0.0.0
DEV_SERVER_PORT=8000

# =====================================
# Feature Flags
# =====================================

# Enable/disable features
FEATURE_ROI_CALCULATOR=true
FEATURE_BIAS_DETECTOR=true
FEATURE_DIFFICULTY_ANALYZER=true
FEATURE_SEMANTIC_SEARCH=true
FEATURE_ENTITY_EXTRACTION=true
FEATURE_INTERACTIVE_DASHBOARD=true
FEATURE_RSS_FEED=true
FEATURE_SITEMAP=true

# =====================================
# Notification Settings (Optional)
# =====================================

# Email notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
NOTIFICATION_EMAIL=

# Slack webhook for alerts
SLACK_WEBHOOK_URL=

# Discord webhook for updates
DISCORD_WEBHOOK_URL=